<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: linear-gradient(to bottom, #12284d, #1e2134);" xmlns="http://javafx.com/javafx/15.0.1"
            fx:controller="me.internalizable.jarvis.gui.controllers.LoginController">
    <left>
        <AnchorPane prefHeight="400.0" prefWidth="207.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="400.0" fitWidth="480.0" layoutX="-131.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/7a94ac9c5b079969c8f2f350e1227010.jpg"/>
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </left>
    <right>
        <AnchorPane prefHeight="400.0" prefWidth="387.0" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="27.0" layoutY="160.0" text="Username" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="20.0"/>
                    </font>
                </Label>
                <TextField fx:id="username" layoutX="157.0" layoutY="159.0" promptText="Input username"/>
                <Label layoutX="28.0" layoutY="218.0" text="Password" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="20.0"/>
                    </font>
                </Label>
                <PasswordField fx:id="password" layoutX="157.0" layoutY="217.0" promptText="Input password"/>
                <Button fx:id="button" layoutX="156.0" layoutY="313.0" mnemonicParsing="false" onAction="#onLogin"
                        prefHeight="28.0" prefWidth="75.0" style="-fx-background-color: white;" text="Log In"/>
                <Label fx:id="wrongLogin" layoutX="158.0" layoutY="113.0" prefHeight="17.0" prefWidth="144.0"
                       textFill="RED"/>
            </children>
        </AnchorPane>
    </right>
</BorderPane>
